/* iPad screens */
@media screen and (max-width: 1024px) {
  body { 
    background: url(<%= asset_path 'bg-image.jpg' %>) #000 no-repeat center fixed; 
  } 
  .submit_field {
    background-color: rgba(000,000,000, .35);
  }
  #bgvid { 
    display: none; 
  }
  .container, .slideshow {
    display: none;
  }
  #show_bg {
    background: url(<%= asset_path 'bg-image.jpg' %>) no-repeat;
    background-size: cover;
  }
  #ball-wrapper {
    right: 7%;
  }

  ::-webkit-input-placeholder {
     color: white;
  }

  :-moz-placeholder { /* Firefox 18- */
     color: white;
  }

  ::-moz-placeholder {  /* Firefox 19+ */
     color: white; 
  }

  :-ms-input-placeholder {  
     color: white;
  }
}

@media screen and (max-width: 940px) {
  #homepage_container {
    width: 65%;
  }
  #homepage_logo_container {
    width: 70%;
    margin: 0 auto;
  }
   .submit_field {
    width: 55%;
    padding: 3px;
  }
  #pitch_container {
    width: 70%;
  }
  #logo {
    height: 105px;
    width: 80%;
  }
}

@media screen and (max-width: 900px) {
  #logo {
    height: 105px;
    width: 90%;
  }
  .submit_button_home {
    margin-top: 15px;
    padding: 4px 10px;
    font-size: 1.8em;
  }
  .submit_field {
    padding: 4px;
  }
  #current-sponsors-container {
    position: fixed;
    top: 15px;
    right: 30px;
    width: 100px;
    height: 45px;
  }
}

@media screen and (max-width: 780px) { 
  #soundcloud_container {
    width: 27%;
    height: 100px;
    float: left;
    z-index: 9999;
  }
  #logo_container {
    margin-left: 5%;
  }
  #submit_container_show {
    float: left;
    width: 30%;
    height: 50px;
    margin-left: 0%;
  }
  .submit_field_show {
    padding: 2px;
    width: 60%;
    font-size: .8em;
  }
  .submit_button_show {
    margin-right: 3%;
    padding: 4px 5px;
    text-align: center; 
    font-size: .8em;
  }
  #logo_container h4 {
    font-size: .9em;
  }
  .ball {
    width: 3px;
    height: 3px;
    margin: 8px auto;
    border-radius: 50px;
  }   
  #ball-wrapper {
    right: 12%;
  } 
}

@media screen and (max-width: 700px) {
  #logo {
    height: 105px;
    width: 100%;
  }
   #welcome {
    margin-top: 0;
    margin-bottom: 35px;
  }
  #welcome h2 {
    font-size: 1.2em;
    margin-bottom: 27%;
  }
  .submit_button_home {
    margin-top: 12px;
    padding: 3px 8px;
    font-size: 1.6em;
  }
}

@media screen and (max-width: 630px) {
  #logo_container h4 {
    font-size: .7em;
    margin-top: -35px;
  }
  #current-sponsors-container-show {
    width: 70%;
    height: 20px;
    margin-top: -15px;
  }
}

@media screen and (max-width: 530px) {
  #homepage_container {
    width: 85%;
  }
  #homepage_logo_container, #welcome_container {
    width: 85%;
    margin: 0 auto;
  }
  #logo {
    height: 105px;
    width: 100%;
  }
  #welcome {
    margin-top: 0;
    margin-bottom: 45px;
  }
  #welcome h2 {
    font-size: 1.2em;
  }
  #pitch_container {
    width: 60%;
  }
  #pitch {
    text-shadow: 0px 1px 7px rgba(000,000,000, 1);
    font-size: .8em;
  }
  .submit_button_home {
    margin-top: 10px;
    padding: 2px 5px;
    font-size: 1.4em;
  }
}

@media screen and (max-width: 500px) { 
  footer {
    height: 365px;
    background-color: rgba(255,255,255, .2);  
    padding-bottom: 0;
  }
  #soundcloud_container {
    width: 80%;
    height: 100px;
    float: left;
    margin-top: 15px;

    margin-left: 10%;
    margin-right: 10%;
    z-index: 9999;
  }
  #logo_container {
    float: left;
    width: 80%;
    height: auto;
    margin-left: 10%;
    margin-right: 10%;
  }
  #submit_container_show {
    float: left;
    width: 60%;
    height: 50px;
    margin-left: 20%;
    margin-top: 15px;
  }
  .submit_field_show {
    padding: 2px;
    width: 60%;
    text-align: center;
    font-size: .8em;
  }
  .submit_button_show {
    padding: 4px 5px;
    text-align: center; 
    font-size: .8em;
  }
  #current-sponsors-container-show {
    position: fixed;
    top: 35px;
    right: 10px;
    width: 30%;
    height: 25px;
  }
  #show_venue {
    text-align: center;
    font-size: .85em;
  }
  .ball {
    width: 2px;
    height: 2px;
    margin: 8px auto;
    border-radius: 50px;
  }    
}

/* iPhone 4+5 screen */
@media screen and (max-width: 320px) {
  body {
    height: 95vh;
  }
  #homepage_container {
    width: 60%;
    padding-top: 100px;
    margin-left: auto;
    margin-right: auto;
  }
  #homepage_logo_container {
    float: left;
    width: 100%;
    height: auto;
    margin-left: 0%;
    margin-right: 0%;
  }
  #welcome {
    margin-bottom: 15px;
  }
  #welcome h2 {
    margin-top: -5px;
    font-size: .8em;
  }
  #pitch_container {
      width: 90%;
      margin-bottom: 60px;
    }
  #pitch {
    font-size: .65em;
    text-shadow: 0px 0px 7px rgba(000,000,000, 1);
  }
  .submit_field {
    font-size: .6em;
  }
}
@media screen and (max-width: 260px) {
  #submit_container_show {
    font-size: .5em;
  }
}






