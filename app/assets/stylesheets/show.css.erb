#show_bg {
  background: url(<%= asset_path 'image3.jpg' %>) no-repeat;
  background-size: cover;
  display: none;
}

#show_venue, #next_artist {
  margin-left: 3%;
  margin-top: 15px;
  color: white;  
  font-family: 'Raleway', sans-serif;
  font-weight: 100;
  font-size: 1em;
}

.submit_button_show {
  padding: 6px 8px;
  margin-top: 10px;
  text-align: center;
  border: 1px solid white !important;
  border-radius: 100px;
  font-family: 'Lato 100', sans-serif;
  font-weight: 100;
  font-size: .9em;
  color: white !important;
  background: none !important;
}

.submit_button_show:hover {
  border: 1px solid #FE2E64 !important;
  color: #FE2E64 !important;
  text-shadow: none;
  box-shadow: none;
  background: none !important;
  -webkit-opacity: 1;
  -moz-opacity: 1;
  opacity: 1;
  -webkit-transition: all 300ms ease-in;
    -moz-transition: all 300ms ease-in;
    -ms-transition: all 300ms ease-in;
    -o-transition: all 300ms ease-in;
    transition: all 300ms ease-in;  
}

.submit_field_show {
  font-size: .8em;
  padding: 3px;
  text-align: center;
  color: white;
  background-color: rgba(255, 255, 255, 0.1);
  border: 1px solid white;
  border-radius: 3px;
}

.submit_field:hover, .submit_field_show:hover {
  border: 1px solid #FE2E64;
}

.submit_field:focus, .submit_field_show:focus {
  border: 1px solid #FE2E64;
}

#logo_container h4 {
  margin: 0;
  padding: 0;
  text-align: center;
}

#logo_show {
  background: url(<%= asset_path 'current-logo.png' %>) no-repeat center;
  background-size: contain;
  height: 120px;
}

#logo_show_load {
  background: url(<%= asset_path 'current-logo.png' %>) no-repeat center;
  background-size: contain;
  height: 35px;
}

#slogan {
  position: relative;
  bottom: 10px;
  text-align: center;
}

#slogan h4 {
  margin: 0;
  padding: 0;
}

#now-playing {
  z-index: 9999;
  margin: 0 auto;
}

