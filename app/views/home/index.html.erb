<video width="400" autoplay loop id="bgvid">
	<source src="/assets/bg-livelocal.mp4" type="video/mp4">
</video>

<div id="welcome_wrapper">
	<div id="logo"></div>
	<div id="welcome">
		<h2>local, live, artist radio.</h2>  
		<br>
		<%= form_tag(show_path) do %>
		<%= text_field_tag :users_zip, nil, :placeholder => "enter your zipcode", class: "submit_field" %>
		<p></p>
		<%= submit_tag "listen", class: "submit_button_home" %>
		<% end %>	
	</div>
	<div id="pitch"><h3>Current streams music from artists performing in your neighborhood, tonight!</h3></div>
</div>